// Великий буфер для DMA (64KB)
#define BUFFER_SIZE 65536
static uint8_t buffer[BUFFER_SIZE];

void SD_WriteTest(void)
{
    FIL file;
    FRESULT fr;
    UINT bytes_written;
    uint32_t total_bytes = 0;

    // Заповнюємо тестовими даними
    memset(buffer, 0xAA, BUFFER_SIZE);

    FRESULT res;

    // Монтуємо диск і примусово створюємо FS, якщо потрібно
    res = f_mount(&SDFatFS, "0:", 1);
    if (res != FR_OK) {
        debug_print("Mount failed!\r\n");
        return;
    }

    // Перевірка доступності кореневого каталогу
    FILINFO fno;
    res = f_stat("0:/", &fno);
    if (res != FR_OK) {
        debug_print("Root path not found, creating filesystem...\r\n");
        res = f_mkfs("0:", FM_ANY, 0, buffer, sizeof(buffer));
        if (res != FR_OK) {
            debug_print("mkfs failed!\r\n");
            return;
        }
    }

    // Відкриваємо/створюємо файл
    fr = f_open(&file, "0:/speed_test.bin", FA_CREATE_ALWAYS | FA_WRITE);
    if(fr != FR_OK) {
        char err[64];
        sprintf(err, "ERROR: f_open failed: %d\r\n", fr);
        debug_print(err);
        return;
    }

    debug_print("File created, starting write test...\r\n");

    uint32_t start_time = HAL_GetTick();

    // Записуємо 32 МБ (512 * 64	KB)
    for(int i = 0; i < 512; i++) {
        fr = f_write(&file, buffer, BUFFER_SIZE, &bytes_written);
        if(fr != FR_OK) {
            debug_print("ERROR: Write failed\r\n");
            break;
        }

        total_bytes += bytes_written;

         //Прогрес кожні ~10%
        if((i % 51) == 0) {
            char progress[50];
            sprintf(progress, "Progress: %d%%\r\n", (i * 100) / 512);
            debug_print(progress);
        }
    }

    f_close(&file);

    uint32_t end_time = HAL_GetTick();
    uint32_t time_ms = end_time - start_time;
    float speed_mbps = (float)((float)total_bytes * 8.0f) / ((float)time_ms * 1000.0f); // Mbps

    debug_print("Test completed!\r\n");
    printf("data: %.2f %lu %lu \r\n", speed_mbps, time_ms, total_bytes);
}

